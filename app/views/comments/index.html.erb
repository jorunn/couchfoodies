<h1>All Comments</h1>

<table>
  <thead>
    <tr>
      <th>Show</th>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.cooking_show.name, comment.cooking_show %></td>
        <td><%= comment.user_name %></td>
        <td><%= comment.body %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
